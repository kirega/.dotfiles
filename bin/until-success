#!/usr/bin/env bash

#                __  _ __
#   __  ______  / /_(_) /     _______  _______________  __________
#  / / / / __ \/ __/ / /_____/ ___/ / / / ___/ ___/ _ \/ ___/ ___/
# / /_/ / / / / /_/ / /_____(__  ) /_/ / /__/ /__/  __(__  |__  )
# \__,_/_/ /_/\__/_/_/     /____/\__,_/\___/\___/\___/____/____/
#

((count = 0))

until "$@"; do
  ((count++))
done

echo "Count: $count"
